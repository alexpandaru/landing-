---
import { Picture } from "@astrojs/image/components";
import moonImage from "~/public/close-up-man-selling-crops-from-his-garden.jpg";

const widths = [450, 800, 1200];
const sizes = "100vw";
---

<Picture
  class="object-cover w-full h-full"
  src={moonImage}
  widths={widths}
  sizes={sizes}
  alt="The ridged surface of the moon"
/>
